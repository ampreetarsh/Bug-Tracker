@model IEnumerable<BugTracker.Models.Classes.Tickets>

@{
    ViewBag.Title = "Index";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#wer').DataTable();
        });
    </script>
}
<h2>Index</h2>

@if (User.IsInRole("Submitter"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table id="wer" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assignee.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creater.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriority.Name)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.TicketStatus.Name)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.TicketType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>

            @if (User.IsInRole("Developer"))
            {
                <th>
                </th>
                <th>
                </th>
            }

            @if (User.IsInRole("Admin"))
            {
                <th>
                </th>
            }

            @if (User.IsInRole("Project Manager"))
            {
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Assignee.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creater.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                   
                    @if (User.IsInRole("Developer"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    }

                    @if (User.IsInRole("Project Manager"))
                    {
                        <td>
                            @Html.ActionLink("AssignDeveloper", "AssignDeveloper", new { ticketId = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    }

                </tr>
            }
                </tbody>

            </table>

